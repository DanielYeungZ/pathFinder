packages:
  dnf:
    supervisor: []

files:
  "/etc/supervisord.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      [supervisord]
      nodaemon=true
      logfile=/var/log/supervisord.log
      pidfile=/var/run/supervisord.pid
      childlogdir=/var/log/

commands:
  start_supervisord:
    command: "supervisord -c /etc/supervisord.conf"
